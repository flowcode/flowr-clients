{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% edit'|trans({'%entity%': 'Opportunity'}, 'Opportunity') }} - {{ parent() }}{% endblock %}

{% block body %}
<section class="content-header">
    <h1>
        <a href="{{ path('opportunity') }}">{{ 'Opportunities' | trans({}, 'Opportunity')}}</a>
        /
            {{ opportunity.name | capitalize}}
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-sm-8">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"></h3>
                    <div class="box-tools">
                        {{ form_start(delete_form) }}
                        {{ form_widget(delete_form) }}

                        <div class="btn-group record_actions">

                            <a class="btn btn-link btn-xs" href="{{ path('opportunity_edit', {id: opportunity.id}) }}">
                                {{ 'Edit'|trans({}, 'Opportunity') }}
                            </a>
                            <button class="btn btn-link btn-xs" type="submit"> {{ 'Delete'|trans({}, 'Opportunity') }}</button>

                        </div>

                        <input name="modal" type="hidden" value="0">
                        {{ form_end(delete_form) }}

                        <div id="delete_confirm" class="modal fade">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <h3>{{ 'Confirm delete'|trans({}, 'Opportunity') }}</h3>
                                    </div>
                                    <div class="modal-body">
                                        <p>{{ 'You are about to delete an item'|trans({}, 'Opportunity') }}, {{ 'this procedure is irreversible'|trans({}, 'Opportunity') }}.</p>
                                        <p>{{ 'Do you want to proceed?'|trans({}, 'Opportunity') }}</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-danger">{{ 'Yes'|trans({}, 'Opportunity') }}</button>
                                        <button class="btn btn-default" data-dismiss="modal">{{ 'No'|trans({}, 'Opportunity') }}</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table table-hover record_properties">
                        <tbody>
                            <tr>
                                <th scope="row">{{'Description'|trans({}, 'Opportunity')}}</th>
                                <td>{{ opportunity.description }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{'Price'|trans({}, 'Opportunity')}}</th>
                                <td>{{ opportunity.price }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{'Status'|trans({}, 'Opportunity')}}</th>
                                <td>{{ opportunity.status }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{'Created'|trans({}, 'Opportunity')}}</th>
                                <td>{{ opportunity.created|date('Y-m-d H:i:s') }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{'Updated'|trans({}, 'Opportunity')}}</th>
                                <td>{{ opportunity.updated|date('Y-m-d H:i:s') }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">

                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">{{ 'boards'|trans|capitalize }}</h3>
                        <div class="box-tools">
                            <a class="btn btn-link" href="{{ path('board_new_to_opportunity', { "id": opportunity.id }) }}">
                                <i class="fa fa-plus"></i>
                            </a>
                        </div>
                    </div>
                    <div class="box-body">
                        <ul>
                            {% for board in opportunityBoards %}
                                <li>
                                    <a class="" href="{{ path('board_show', {"id":board.id}) }}">
                                        {{ board.name }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="box-footer">
                    </div>
                </div>
        </div>
    </div>


</section>

{% endblock %}
