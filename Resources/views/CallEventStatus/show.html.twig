{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{% block title %}{{ '%entity% edit'|trans({'%entity%': 'CallEventStatus'}, 'CallEventStatus') }} - {{ parent() }}{% endblock %}

