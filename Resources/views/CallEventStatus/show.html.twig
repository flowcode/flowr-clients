            <div class="box-body">
                <table class="table table-hover record_properties">
                    <tbody>
                        <tr>
                            <th scope="row">{{'Id'|trans({}, 'CallEventStatus')}}</th>
                            <td>{{ calleventstatus.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Name'|trans({}, 'CallEventStatus')}}</th>
                            <td>{{ calleventstatus.name }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Finished'|trans({}, 'CallEventStatus')}}</th>
                            <td>{% if calleventstatus.finished %}<i class="fa fa-check-square-o"></i>{% else %}<i class="fa fa-square-o"></i>{% endif %}</td>
