{% extends "FlowerClientsBundle:Client:layout.html.twig" %}

{% block title %}{{ '%entity% list'|trans({'%entity%': 'Estimation'}, 'Estimation') }} - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerClientsBundle:Client:appnav.html.twig",{'app_estimation':true}) }}
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>{{ 'estimations'|trans|title }}</h1>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title"></h3>
                <div class="box-tools pull-right">
                </div>
            </div>
            <div class="box-body">
                <table class="table table-condensed">
                    <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Ratioadmin</th>
                        <th scope="col">Ratiotesting</th>
                        <th scope="col">Dailyworkinghours</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for estimation in paginator %}
                        <tr>
                            <td>
                                <a href="{{ path('client_access_estimation_show', {id: estimation.id}) }}">{{ estimation.name|capitalize }}</a>
                            </td>
                            <td>{{ estimation.ratioAdmin }}</td>
                            <td>{{ estimation.ratioTesting }}</td>
                            <td>{{ estimation.dailyWorkingHours }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                {{ knp_pagination_render(paginator) }}
            </div>
            <div class="box-footer">

            </div>

    </section>

{% endblock %}
