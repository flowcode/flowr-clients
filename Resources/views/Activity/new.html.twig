            <a href="{{ path('admin_clients_activity') }}"> {{ '%entity% list'|trans({'%entity%': 'Activity'}, 'Activity') }}</a>
            /
            {{ 'Activity' | trans({}, 'Activity')}}
        </h1>

    </section>        
    <section class="content">
        <div class="box">
            <div class="box-body">
                {{ form_start(form, {action: path('admin_clients_activity_create')}) }}
