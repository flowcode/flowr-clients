{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'CallEvent'}, 'CallEvent') }} - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerClientsBundle::appnav-postventa.html.twig", { 'app_calls': true }) }}
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            {{ 'Create a new %entity%'|trans({'%entity%': 'CallEvent'}, 'CallEvent') }}
        </h1>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header">
            </div>
            <div class="box-body">
                {{ form_start(form, {action: path('callevent_create')}) }}
                    {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
            <div class="box-footer">
                <div class="btn-group record_actions">
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/flowercore/js/reminders.js') }}" type="text/javascript"></script>
    {{ form_javascript(form) }}
{% endblock %}