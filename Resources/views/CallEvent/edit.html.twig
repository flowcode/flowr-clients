{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% edit'|trans({'%entity%': 'CallEvent'}, 'CallEvent') }} - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            <a href="{{ path('callevent') }}"> {{ 'callevents'|trans|capitalize }}</a>
            /
                <a href="{{ path('callevent_show', {id: callevent.id}) }}"> {{ callevent|capitalize }}</a>
        </h1>
    </section> 
    <section class="content">
        <div class="box">
            <div class="box-header">
            </div>
            <div class="box-body">

            {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
            {{ form_end(edit_form) }}
            </div>
        </div>
    </section>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/flowercore/js/reminders.js') }}" type="text/javascript"></script>
    {{ form_javascript(edit_form) }}
{% endblock %}