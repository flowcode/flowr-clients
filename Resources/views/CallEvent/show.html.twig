{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}CallEvent - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            <a href="{{ path('callevent') }}"> {{ 'calls'|trans|capitalize }}</a>
            {% if callevent.account %}
            /
            <a href="{{ path('account_show',{id: callevent.account.id}) }}"> {{ callevent.account|trans|capitalize }}</a>
            {% endif %}
            /
                {{ callevent.subject|capitalize }}
        </h1>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-header">
                        <div class="box-tools">
                            {{ form_start(delete_form) }}
                            {{ form_widget(delete_form) }}

                            <div class="btn-group record_actions">

                                <a class="btn btn-link  btn-sm" href="{{ path('callevent_edit', {id: callevent.id}) }}">
                                    {{ 'Edit'|trans({}, 'CallEvent') }}
                                </a>
                                <button class="btn btn-link btn-sm" type="submit">{{ 'Delete'|trans({}, 'CallEvent') }}</button>

                            </div>

                            <input name="modal" type="hidden" value="0">
                            {{ form_end(delete_form) }}

                            <div id="delete_confirm" class="modal fade">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                            <h3>{{ 'Confirm delete'|trans({}, 'CallEvent') }}</h3>
                                        </div>
                                        <div class="modal-body">
                                            <p>{{ 'You are about to delete an item'|trans({}, 'CallEvent') }}, {{ 'this procedure is irreversible'|trans({}, 'CallEvent') }}.</p>
                                            <p>{{ 'Do you want to proceed?'|trans({}, 'CallEvent') }}</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button class="btn btn-danger">{{ 'Yes'|trans({}, 'CallEvent') }}</button>
                                            <button class="btn btn-default" data-dismiss="modal">{{ 'No'|trans({}, 'CallEvent') }}</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-body">
                        <table class="table table-hover record_properties">
                            <tbody>
                                <tr>
                                    <th scope="row">{{'contactName'|trans({}, 'CallEvent')}}</th>
                                    <td>{{ callevent.contactName }}</td>
                                </tr>

                                <tr>
                                    <th scope="row">{{'frequency'|trans({}, 'CallEvent')}}</th>
                                    <td>{{ callevent.frequency }}</td>
                                </tr>

                                <tr>
                                    <th scope="row">{{'status'|trans({}, 'CallEvent')}}</th>
                                    <td>{{ callevent.status }}</td>
                                </tr>

                                <tr>
                                    <th scope="row">{{'subject'|trans({}, 'CallEvent')}}</th>
                                    <td>{{ callevent.subject }}</td>
                                </tr>

                                <tr>
                                    <th scope="row">{{'description'|trans({}, 'CallEvent')}}</th>
                                    <td>{{ callevent.description }}</td>
                                </tr>

                                <tr>
                                    <th scope="row">{{'date'|trans({}, 'CallEvent')}}</th>
                                    <td>{{ callevent.date | date ('y-m-d H:i')}}</td>
                                </tr>
                                <tr>
                                    <th scope="row">{{'assignee'|trans({}, 'CallEvent')}}</th>
                                    <td>{{ callevent.assignee }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="box-footer">

                    </div>
                </div>
            </div>
        </div>


    </section>

{% endblock %}
