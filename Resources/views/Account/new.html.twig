{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'Account'}, 'Account') }} - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerClientsBundle::appnav.html.twig", { 'app_account': true }) }}
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            {{ 'Create a new %entity%'|trans({'%entity%': 'Account'}, 'Account') }}
        </h1>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header">
            </div>
            <div class="box-body">
                {{ form_start(form, {action: path('account_create')}) }}
                {{ form_widget(form) }}
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-primary" type="submit">{{ 'Create'|trans({}, 'Account') }}</button>
                        <a class="btn btn-default" href="{{ path('account') }}" >{{ 'cancel'|trans|title }}</a>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
            <div class="box-footer">
                <div class="btn-group record_actions">
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ form_javascript(form) }}
{% endblock %}