{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% edit'|trans({'%entity%': 'Account'}, 'Account') }} - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            <a href="{{ path('account') }}"> {{ 'accounts'|trans|capitalize }}</a>
            /
                <a href="{{ path('account_show', {id: account.id}) }}"> {{ account|capitalize }}</a>
        </h1>
    </section> 
    <section class="content">
        <div class="box">
            <div class="box-header">
            </div>
            <div class="box-body">

            {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <p>
                    <button class="btn btn-primary" type="submit"><i class="fa fa-edit"></i> {{ 'Save'|trans({}, 'Account') }}</button>
                </p>
            {{ form_end(edit_form) }}
            </div>
        </div>
    </section>
{% endblock %}


